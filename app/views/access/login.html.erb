<% @page_title = 'Admin Login' %>


<%=	form_tag(access_attemp_login_path, :method => :post, :class => 'form-signin' ) do %>

    <h2 class="form-signin-heading">Please Log in</h2>

    <%= text_field_tag(:username, params[:username], :class => 'form-control', :placeholder => 'Username') %>

    <%= password_field_tag(:password, nil, :class => 'form-control', :placeholder => 'Password') %>
    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>

    <%= submit_tag('Log In', :class=> 'btn btn-lg btn-primary btn-block')%>

<% end %>
