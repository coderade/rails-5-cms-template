<% @page_title = 'All Subjects' %>

<div class="subjects index">
  <h2>Subjects</h2>
  <%= link_to('Add New Subject', new_subject_path, :class => 'action new') %>

  <table class="table table-striped table-index">
    <thead class="thead-inverse">
    <tr>
      <th>#</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <%	@subjects.each do |subject| %>
        <tr>
          <td> <%=	 subject.position %> </td>
          <td> <%= subject.name %> </td>
          <td class="center"> <%=	status_tag(subject.visible) %> </td>
          <td class="center"> <%= subject.pages.size %> </td>
          <td class="actions">
            <%= link_to('Show', subject_path(subject), :class => 'btn btn-success') %>
            <%= link_to('Edit', edit_subject_path(subject), :class => 'btn btn-info') %>
            <%= link_to('Delete', delete_subject_path(subject), :class => 'btn btn-danger') %>
          </td>
        </tr>
    <% end %>
    </table>
</div>