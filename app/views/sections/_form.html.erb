<%=  error_messages_for(f.object) %>

<div class="form-group">
  <%= label( :page, :name, 'Name') %>
  <%= f.text_field(:name, :class => 'form-control')  %>
</div>
<div class="form-group">
  <%= label( :page, :page_id, 'Page') %>
  <%= f.select(:page_id, @pages.map {|p| [p.name, p.id]}, {}, {:class => 'custom-select form-control'})  %>
</div>
<div class="form-group">
  <%= label( :page, :position, 'Position') %>
  <%=	 f.select(:position, 1..@sections_count, {}, {:class => 'custom-select form-control'})  %>
</div>
<div class="form-group">
  <%= label( :page, :visible, 'Visible') %>
  <%=	f.check_box(:visible)  %>
</div>
<div class="form-group">
  <%= label( :page, :content_type, 'Content type') %>
  <div class="form-check">
    <%=	f.radio_button(:content_type, 'text',)  %> Text
  </div>
  <div class="form-check">
    <%=	f.radio_button(:content_type, 'html')  %> HTML
  </div>
</div>
<div class="form-group">
  <%= label( :page, :content, 'Content') %>
  <%=	f.text_area(:content, :size => '40x10', :class => 'form-control')  %>
</div>

