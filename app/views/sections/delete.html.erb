<% @page_title = 'Delete section ' + @section.name %>


<%= link_to sections_path(:page_id => @page.id) , :class => 'btn btn-secondary btn-back' do %>
    <i class="fa fa-arrow-left"></i>
    <span>Back to List</span>
<% end %>

<div class="sections delete">
  <h2>Delete the Section <strong><%= @section.name %></strong></h2>

  <%= form_for(@section, :url => section_path(@section, :page_id => @page.id), :method => 'delete') do  |f| %>

      <p class="alert alert-danger delete-alert"> Are you sure that you want to permanently delete the section
        <strong> <%=	f.object.name %> </strong> ?
      </p>

      <div class="form-buttons">
        <%=	 f.submit('Confirm', :class => 'btn btn-danger') %>
        <%= link_to('Cancel', sections_path, :class => 'btn btn-info')%>
      </div>
  <% end %>
</div>