<%= link_to section_path, :class => 'btn btn-secondary btn-back' do %>
    <i class="fa fa-arrow-left"></i>
    <span>Back to List</span>
<% end %>

<h2>Update Section</h2>

<div class="sections update">
  <%= form_for(@section, :html => {:class => 'form-edit'})  do  |f| %>
      <%=	 render(:partial => 'form', :locals => {:f => f}) %>

      <% @page_title = 'Edit section ' + f.object.name %>

      <div class="form-buttons">
        <%=	 f.submit('Update Section') %>
      </div>
  <% end %>
</div>