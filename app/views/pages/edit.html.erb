<% @page_title = 'Edit page ' + @page.name %>

<%= link_to pages_path , :class => 'btn btn-secondary btn-back' do %>
    <i class="fa fa-arrow-left"></i>
    <span>Back to List</span>
<% end %>

<h2>Edit page
  <strong><%= @page.name %></strong>
</h2>


<div class="pages new">
  <%= form_for(@page, :html => {:class => 'form-edit'})  do  |f| %>
      <%=	 render(:partial => 'form', :locals => {:f => f}) %>



      <div class="form-buttons">
        <%=	 f.submit('Edit Page', :class => 'btn btn-primary')  %>
      </div>
  <% end %>
</div>