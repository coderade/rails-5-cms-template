<% @page_title = 'Show page ' + @page.name  %>

<%= link_to pages_path(:subject_id => @subject.id) , :class => 'btn btn-secondary btn-back' do %>
    <i class="fa fa-arrow-left"></i>
    <span>Back to List</span>
<% end %>

<div class="pages show">
  <h2 class="table-title">
    Page <strong><%= @page.name %></strong>
  </h2>
  <table class="table">
    <tr>
      <th>Subject_id</th>
      <td><%= @page.subject_id %></td>
    </tr>
    <tr>
      <th>Permalink</th>
      <td><%= @page.permalink %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @page.position %></td>
    </tr>
    <tr>
      <th>Visible</th>
      <td><%=	status_tag(@page.visible) %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @page.created_at.strftime('%B %d, %Y %H:%M')%></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @page.updated_at.strftime('%B %d, %Y %H:%M')%></td>
    </tr>
  </table>
</div>